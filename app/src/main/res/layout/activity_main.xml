<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dai.mvp_example.MvActivity">

    <TextView
        android:id="@+id/password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:text="Enter Password:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/password_title"
        android:layout_below="@+id/password_title"
        android:layout_marginTop="10dp"
        android:inputType="numberPassword"
        android:maxLength="4" />

    <TextView
        android:id="@+id/confirm_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/password_title"
        android:layout_below="@+id/password"
        android:layout_marginTop="10dp"
        android:text="Confirm Password:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/confirm_password_title"
        android:layout_below="@+id/confirm_password_title"
        android:layout_marginTop="10dp"
        android:inputType="numberPassword"
        android:maxLength="4" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/password_title"
        android:layout_below="@+id/confirm_password"
        android:layout_marginTop="20dp"
        android:text="Submit" />

    <CheckBox
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:text="Success!"
        android:textSize="18sp" />
</RelativeLayout>
